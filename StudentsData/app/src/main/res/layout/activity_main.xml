<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.muhammadarslan.studentsdata.MainActivity">

    <TextView
        android:id="@+id/addRecordBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ff9800"
        android:text="Add Student Data"
        android:textColor="#e8f5e9"
        android:textSize="24sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/searchBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#198c22"
        android:text="Search Student Data"
        android:textColor="#e8f5e9"
        android:textSize="24sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/viewBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#29b6f6"
        android:text="View All Data"
        android:textColor="#e8f5e9"
        android:textSize="24sp"
        android:gravity="center"
        />


</LinearLayout>
